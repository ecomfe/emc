{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": ["src", "README.md"],
        "includePattern": ".+\\.(js|md)$"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "tags": ["exceptions"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "systemName": "emc",
        "footer": "{string}",
        "copyright": "Baidu Inc. All rights reserved.",
        "navType": "vertical",
        "theme": "flatly",
        "linenums": true,
        "collapseSymbols": true
    },
    "opts": {
        "destination": "doc/api/",
        "encoding": "utf-8",
        "recurse": true
    }
}
